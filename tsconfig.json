{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "./dist",
        "strict": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "isolatedModules": true,
        "sourceMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "docs",
        "**/*.spec.ts"
    ]
}